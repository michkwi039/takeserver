<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="zawody">

        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>pl.zawody.Entities.Biegi</class>
        <class>pl.zawody.Entities.Konkurencja</class>
        <class>pl.zawody.Entities.Wyniki</class>
        <class>pl.zawody.Entities.Zawodnicy</class>
        <class>pl.zawody.Entities.Zawody</class>

        <properties>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/zawody?useUnicode=true;useJDBCCompliantTimezoneShift=true;useLegacyDatetimeCode=false;serverTimezone=UTC"/>
            <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>
            <property name="hibernate.connection.password" value="root"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>

